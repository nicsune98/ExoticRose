<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExoticRose.Invernaderos"
             BackgroundColor="#D9D9D9"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Grid BackgroundColor="#005398" HeightRequest="50" Padding="10">
                <Label Text="Recolección" VerticalOptions="Center" TextColor="White" FontSize="16" VerticalTextAlignment="Start"/>
                <Button x:Name="btRegistrar" Text="+" TextColor="White" HorizontalOptions="End" VerticalOptions="Start" BackgroundColor="#005398" FontSize="20" BorderRadius="100"/>
            </Grid>
            <Label Text="Selecciona un Invernadero" TextColor="Black" HorizontalOptions="Center" FontSize="16" Margin="0,10,0,-5"/>
            <Picker x:Name="pkInvernadero" SelectedIndexChanged="pkInvernadero_SelectedIndexChanged" TextColor="Black" HorizontalTextAlignment="Center" BackgroundColor="#005398"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
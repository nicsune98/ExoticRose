<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExoticRose.Menu"
             BackgroundColor="#D9D9D9"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Grid BackgroundColor="#005398" HeightRequest="50" Padding="10" ColumnSpacing="0" ColumnDefinitions="*,*,*,*">
                <Label Text="Pedrito 1" HorizontalOptions="StartAndExpand" TextColor="White" FontSize="20" VerticalOptions="Center" Grid.Column="0"/>
                <Image Source="Cabecera.png" Grid.Column="3" HorizontalOptions="EndAndExpand"/>
            </Grid>
            <Button x:Name="btInvernadero" Text="Invernaderos" BackgroundColor="White" TextColor="Black" HeightRequest="100" Clicked="btInvernadero_Clicked"/>
            <Button x:Name="btMapa" Text="Mapa" BackgroundColor="White" TextColor="Black" HeightRequest="100" Clicked="btMapa_Clicked"/>
            <Button x:Name="btProceso" Text="Proceso" BackgroundColor="White" TextColor="Black" HeightRequest="100" Clicked="btProceso_Clicked"/>
            <Button x:Name="btGraficos" Text="Gráficos" BackgroundColor="White" TextColor="Black" HeightRequest="100" Clicked="btGraficos_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>